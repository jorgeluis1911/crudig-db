      </div>
    </div>    
    
        
     <div class="container">    
            
        <% if message != '' %>
          <%= message%>
        <!--<div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>-->
        <% end %>
          
        
        <div id="chart_div_circle" style="width:400; height:400; float: left;"></div>
          
        <div id="chart_div_column" style="width: 400px; height: 400px; float: left;"></div>
        
        <div id="chart_div_bar" style="width: 400px; height: 400px; float: left;"></div>
        
        <div id="chart_div_combo" style="width: 400px; height: 400px; float: left;"></div>
        
        <div id="chart_div_area" style="width: 400px; height: 400px; float: left;"></div>
        
        <div id="chart_div_line" style="width: 400px; height: 400px; float: left;"></div>        
    </div>
        
      
  </body>
</html>        
